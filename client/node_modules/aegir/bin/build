#! /usr/bin/env node

'use strict'

const gulp = require('gulp')
const args = require('args-parser')(process.argv)

require('../src/gulp-log')(gulp)
require('../gulp')(gulp, ['build'])

if (args.browser) {
  gulp.start('build:browser')
} else if (args.node) {
  gulp.start('build:node')
} else {
  gulp.start('build')
}
